{
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.project.sourcePaths": ["build/generated-src/antlr/main/"],
  "java.project.resourceFilters": ["node_modules", ".git", ".antlr"],
  "[java]": {
    "editor.suggest.snippetsPreventQuickSuggestions": false
    //"editor.formatOnSave": false
  },
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m",
  "files.associations": {
    "*.snap": "glsl",
    "*.cases": "glsl",
    "**/glslang-test/*": "glsl"
  },
  "coverage-gutters.coverageFileNames": [
    "lcov.info",
    "cov.xml",
    "coverage.xml",
    "jacoco.xml",
    "jacocoTestReport.xml"
  ],
  "coverage-gutters.coverageBaseDir": "glsl-transformer/build/reports/jacoco/test",
  "cSpell.words": ["abde"]
}
